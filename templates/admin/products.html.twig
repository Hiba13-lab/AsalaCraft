                        {% endif %}
                    </td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }} â‚¬</td>
                    <td><span class="badge bg-info text-dark">{{ product.seller.user.email }}</span></td>
                    <td>
                        <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Supprimer ce produit dÃ©finitivement ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}