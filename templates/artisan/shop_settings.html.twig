{% extends 'base.html.twig' %}

{% block title %}Ma Boutique{% endblock %}

{% block body %}
    <h1>Gérer ma boutique</h1>

    <div style="border: 1px solid #ccc; padding: 20px; border-radius: 10px; max-width: 500px;">
        {{ form_start(shopForm) }}
            {{ form_row(shopForm.shopName, {'label': 'Nom de votre enseigne'}) }}
            
            {# Les autres champs (description, address, phone) s'afficheront ici automatiquement #}
            {{ form_rest(shopForm) }}
            
            <button type="submit" style="background: #007bff; color: white; padding: 10px; border: none; border-radius: 5px; cursor: pointer; margin-top: 15px;">
                Mettre à jour ma boutique
            </button>
        {{ form_end(shopForm) }}
    </div>

    <p style="margin-top: 20px;">
        <a href="{{ path('app_home') }}">⬅ Retour à l'accueil</a>
    </p>
{% endblock %}