{% extends 'base.html.twig' %}

{% block title %}AsalaCraft - Boutique d'Artisanat{% endblock %}

{% block body %}
<div class="container mt-5">
    {# TITRE PRINCIPAL #}
    <h1 class="text-center display-5 fw-bold mb-4">‚ú® D√©couverte l'Artisanat Unique</h1>

    {# BARRE DE RECHERCHE #}
    <div class="row justify-content-center mb-5">
        <div class="col-md-7">
            <form action="{{ path('app_home') }}" method="get" class="input-group shadow-sm">
                <input type="text" name="search" class="form-control border-end-0" placeholder="Rechercher une pi√®ce unique..." value="{{ searchTerm }}">
                <button class="btn btn-white border border-start-0 text-muted" type="submit">üîç</button>
            </form>
        </div>
    </div>

    {# BOUTONS DE FILTRES (CAT√âGORIES) #}
    <div class="text-center mb-5">
        <p class="text-muted small mb-3">Trier par Cat√©gorie :</p>
        <div class="d-flex flex-wrap justify-content-center gap-2">
            {# Bouton Tout voir #}
            <a href="{{ path('app_home') }}" 
               class="btn btn-sm px-4 rounded-pill {% if not currentCategory %}btn-dark{% else %}btn-outline-dark{% endif %}">
                Tout voir
            </a>
            
            {# Boutons dynamiques #}
            {% for category in categories %}
                <a href="{{ path('app_home', {'category': category.id}) }}" 
                   class="btn btn-sm px-4 rounded-pill {% if currentCategory == category.id %}btn-primary text-white{% else %}btn-outline-secondary{% endif %}">
                   {{ category.name }}
                </a>
            {% endfor %}
        </div>
    </div>

    <h2 class="mb-4 fw-bold">** Nos Produits Artisanaux</h2>

    {# GRILLE DE PRODUITS #}
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for product in products %}
            <div class="col">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden position-relative">
                    {# Badge cat√©gorie sur l'image #}
                    {% if product.category %}
                        <span class="badge bg-primary position-absolute m-3" style="z-index: 10;">{{ product.category.name }}</span>
                    {% endif %}

                    <div style="height: 250px; background: #f0f0f0;">
                        {% if product.image %}
                            <img src="{{ asset('uploads/products/' ~ product.image) }}" class="card-img-top h-100 w-100" style="object-fit: cover;">
                        {% else %}
                            <div class="h-100 d-flex align-items-center justify-content-center text-muted">Pas d'image</div>
                        {% endif %}
                    </div>

                    <div class="card-body px-3 pb-4">
                        <h5 class="card-title fw-bold mb-1">{{ product.name }}</h5>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="h4 text-primary fw-bold mb-0">{{ product.price }} ‚Ç¨</span>
                            <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-dark btn-sm rounded-pill px-3">
                                Voir d√©tails
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <p class="lead text-muted">Aucun produit ne correspond √† votre recherche. üè∫</p>
                <a href="{{ path('app_home') }}" class="btn btn-link">R√©initialiser les filtres</a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}