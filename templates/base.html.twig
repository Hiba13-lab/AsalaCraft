
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}AsalaCraft{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4 shadow">
            <div class="container">
                <a class="navbar-brand fw-bold" href="{{ path('app_home') }}">üè∫ AsalaCraft</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">Boutique</a>
                        </li>

                        {# Affiche "Mes Produits" seulement pour les vendeurs (sellerProfile) #}
                        {% if app.user and app.user.getSellerProfile() %}
                            <li class="nav-item">
                                <a class="nav-link text-warning fw-bold" href="{{ path('app_product_index') }}">üì¶ Mes Produits</a>
                            </li>
                        {% endif %}
                    </ul>

                    <ul class="navbar-nav ms-auto text-center">
                        {% if app.user %}
                            <li class="nav-item">
                                <span class="nav-link text-light small">Connect√© : {{ app.user.email }}</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm ms-2 mt-1" href="{{ path('app_logout') }}">D√©connexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                            <li class="nav-item"><a class="btn btn-primary btn-sm ms-2 mt-1" href="{{ path('app_register') }}">S'inscrire</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <main class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : 'success' }} alert-dismissible fade show shadow-sm">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>