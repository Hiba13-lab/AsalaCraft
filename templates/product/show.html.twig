{% extends 'base.html.twig' %}

{% block title %}D√©tails du produit - {{ product.name }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0">
                {% if product.image %}
                    <img src="{{ asset('uploads/products/' ~ product.image) }}" class="img-fluid rounded" alt="{{ product.name }}">
                {% else %}
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <span class="text-muted">Aucune image disponible</span>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="col-md-6">
            <div class="p-3">
                <h1 class="display-5 fw-bold">{{ product.name }}</h1>
                
                {% if product.category %}
                    <span class="badge bg-info text-dark mb-3">{{ product.category.name }}</span>
                {% endif %}

                <p class="h3 text-primary mb-4">{{ product.price }} ‚Ç¨</p>
                
                <div class="mb-4">
                    {% if product.stock > 0 %}
                        <span class="text-success fw-bold">‚úÖ Disponible ({{ product.stock }} en stock)</span>
                    {% else %}
                        <span class="text-danger fw-bold">‚ùå En rupture de stock</span>
                    {% endif %}
                </div>

                <hr>
                
                <h5>Description</h5>
                <p class="lead text-muted">{{ product.description|default('Aucune description fournie.')|nl2br }}</p>

                <div class="d-grid gap-2 mt-4">
                    {% if app.user and app.user.getSellerProfile() %}
                        <div class="alert alert-secondary text-center rounded-pill">
                            Mode vendeur : achat d√©sactiv√©
                        </div>
                    {% elseif product.stock > 0 %}
                        <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-dark btn-lg py-3 rounded-pill fw-bold">
                            üõí Ajouter au panier
                        </a>
                    {% else %}
                        <button class="btn btn-secondary btn-lg py-3 rounded-pill fw-bold" disabled>
                            Indisponible
                        </button>
                    {% endif %}
                    
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary rounded-pill">
                        ‚¨ÖÔ∏è Retour √† la boutique
                    </a>
                </div>

                {% if app.user and product.seller == app.user.sellerProfile %}
                    <div class="mt-5 p-4 bg-light rounded border border-warning shadow-sm">
                        <h6 class="text-uppercase text-warning fw-bold mb-3">üõ†Ô∏è Espace Vendeur : Gestion du produit</h6>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">
                                ‚úèÔ∏è Modifier
                            </a>
                            <div class="ms-auto">
                                {{ include('product/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}