{% extends 'base.html.twig' %}

{% block title %}Mes Produits - AsalaCraft{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">ðŸ“¦ Gestion de mes produits</h1>
        <a href="{{ path('app_product_new') }}" class="btn btn-primary">âž• Ajouter un produit</a>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>CatÃ©gorie</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td>
                            {% if product.image %}
                                <img src="{{ asset('uploads/products/' ~ product.image) }}" width="50" height="50" class="rounded object-fit-cover">
                            {% else %}
                                <span class="text-muted small">Pas d'image</span>
                            {% endif %}
                        </td>
                        <td class="fw-bold">{{ product.name }}</td>
                        <td>
                            {% if product.category %}
                                <span class="badge bg-info text-dark">{{ product.category.name }}</span>
                            {% else %}
                                <span class="text-muted small">Aucune</span>
                            {% endif %}
                        </td>
                        <td>{{ product.price }} â‚¬</td>
                        <td>
                            {% if product.stock <= 0 %}
                                <span class="badge bg-danger">Rupture de stock</span>
                            {% elseif product.stock < 10 %}
                                <span class="badge bg-warning text-dark">Attention : {{ product.stock }} restants</span>
                            {% else %}
                                <span class="badge bg-success">{{ product.stock }} en stock</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-dark">Voir</a>
                                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-outline-primary">Modifier</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-4 text-muted">Vous n'avez pas encore de produits en vente.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}